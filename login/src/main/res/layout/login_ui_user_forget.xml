<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/login_bg_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:src="@mipmap/comn_icon_lock" />

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/user_reg_oldpassword"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="textPassword"
            android:textColor="@color/text_333"
            android:textColorHint="@color/text_333"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/login_bg_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:src="@mipmap/comn_icon_lock" />

        <EditText
            android:id="@+id/passwordOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_333"
            android:textColorHint="@color/text_333"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/login_bg_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:src="@mipmap/comn_icon_lock" />

        <EditText
            android:id="@+id/passwordTwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_333"
            android:textColorHint="@color/text_333"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何设置可靠密码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1.密码长度在6位以上"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="2.密码中包含数字、字母和特殊字符"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="3.加入1-2个大写字母"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="4.不使用一些连续的字母和数字"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/login_button_select"
        android:clickable="true"
        android:gravity="center"
        android:onClick="commit"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

</LinearLayout>