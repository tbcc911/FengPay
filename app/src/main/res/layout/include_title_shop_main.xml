<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/application_color"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:src="@mipmap/ui_main_index_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_7"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="6"
            android:background="@drawable/ui_store_main_title_search_bg"
            android:drawableLeft="@mipmap/ui_main_title_search_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="搜索你感兴趣的资讯"
            android:textColor="@color/white"
            android:textSize="11sp" 
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:id="@+id/title_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:src="@mipmap/comn_icon_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_7"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>