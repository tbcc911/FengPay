<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫向我付款"
        android:textColor="@color/text_333"
        android:textSize="@dimen/sp_25" />

    <!-- 用户信息 -->
    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/comn_bg_white_fillet"
        android:elevation="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_30"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_30">

        <ImageView
            android:id="@+id/code"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/comn_icon_test_code" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/base_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/collectionRecord"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/dp_150"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/mine_bg_app_fillet_stroke_small"
            android:elevation="@dimen/dp_3"
            android:gravity="center"
            android:text="收款记录"
            android:textColor="@color/application_color"
            android:textSize="@dimen/sp_15" />

        <Button
            android:id="@+id/saveCode"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/chain_bg_mine_money_application_r5"
            android:elevation="@dimen/dp_3"
            android:gravity="center"
            android:text="保存二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>