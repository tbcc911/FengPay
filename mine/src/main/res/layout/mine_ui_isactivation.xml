<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/base_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/aliIcon"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/base_image_alipay"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20" />

    <LinearLayout
        android:id="@+id/hidell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_fillet_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权状态"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/activationState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_c_666666"
                android:textSize="@dimen/sp_12"
                tools:text="授权状态"
                android:visibility="visible"
                android:gravity="end|center_vertical"/>
            
        </LinearLayout>
        
        <TextView
            style="@style/base_line_vertical1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权账号"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/activationCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_c_666666"
                android:textSize="@dimen/sp_12"
                tools:text="授权状态"
                android:visibility="visible"
                android:gravity="end|center_vertical"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/servicell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_fillet_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单状态"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/stateName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_c_666666"
                android:textSize="@dimen/sp_12"
                tools:text="授权状态"
                android:visibility="visible"
                android:gravity="end|center_vertical"/>

        </LinearLayout>

        <TextView
            style="@style/base_line_vertical1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switch_istrue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:thumb="@drawable/switch_ios_thumb"
                android:track="@drawable/switch_ios_track_selector"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/activationButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/mine_button_select"
        android:clickable="true"
        android:gravity="center"
        android:onClick="exit"
        android:text="重新授权"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13" />
    
</LinearLayout>