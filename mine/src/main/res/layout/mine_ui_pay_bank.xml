<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:clipChildren="false"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_333"
            android:text="收款人:    "
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"/>

        <TextView
            android:id="@+id/sName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_333"
            tools:text="收款人姓名"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@drawable/comn_white_applition_r5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                android:text="收款银行:"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"/>

            <TextView
                android:id="@+id/sCardName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                tools:text="收款银行名称"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/comn_white_applition_r5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                android:text="收款卡号:"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"/>

            <TextView
                android:id="@+id/sCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                tools:text="收款卡号"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/comn_white_applition_r5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"/>

        </LinearLayout>

        

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_333"
            android:text="支付账户名:    "
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"/>

        <EditText
            android:id="@+id/fName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="@dimen/dp_0"
            android:minHeight="@dimen/dp_0"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_333"
            android:hint="请输入账户名"
            android:textColorHint="@color/text_c_666666"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@drawable/comn_white_applition_r5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                android:text="支付银行名称:"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"/>

            <EditText
                android:id="@+id/fCardName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                android:hint="请输入银行名称"
                android:textColorHint="@color/text_c_666666"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/comn_white_applition_r5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_333"
            android:text="支付银行卡号:"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"/>

            <EditText
                android:id="@+id/fCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/comn_white_applition_r5"
                android:hint="请输入银行卡号"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/text_333"
                android:textColorHint="@color/text_c_666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                android:text="充值金额:         "
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"/>

            <EditText
                android:id="@+id/fMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_333"
                android:hint="请输入充值金额"
                android:textColorHint="@color/text_c_666666"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/comn_white_applition_r5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:inputType="number"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/image_upload_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20" 
            android:layout_marginTop="@dimen/dp_20"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/mine_button_select"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
        
    </LinearLayout>

</ScrollView>