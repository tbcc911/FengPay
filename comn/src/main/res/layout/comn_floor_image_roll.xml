<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.fzs.comn.widget.floor.banner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pageChangeDuration="1200"
        app:banner_pointAutoPlayInterval="3000"
        app:banner_pointContainerBackground="@color/transparent"
        app:banner_pointTopBottomMargin="@dimen/dp_5"
        app:banner_tipTextSize="@dimen/sp_12"
        app:banner_transitionEffect="defaultEffect"
        app:banner_viewAspectRatio="4.44" />
</FrameLayout>

