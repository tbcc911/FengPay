<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comn_bg_white_fillet_big"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDT提币"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/comn_bg_save_r10"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/usdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="0.00"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:maxLines="1"
                    android:text="可提现额度"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/comn_bg_save_r10"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提币地址："
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="请输入提币地址"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/text_333"
                        android:textColorHint="@color/text_c_666666"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提币数量"
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/usdtNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="请输入提币数量"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/text_333"
                        android:textColorHint="@color/text_c_666666"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDT"
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usdt_tb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    tools:text="当前手续费为5%"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <Button
                android:id="@+id/comit"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/comn_button_circle_select"
                android:elevation="@dimen/dp_3"
                android:gravity="center"
                android:text="提币"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/base_close_white" />
</LinearLayout>

