<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/comn_bg_white_fillet_top"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">


    <TextView
        android:id="@+id/spike_time_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:gravity="center_vertical"
        android:text="限时秒杀"
        android:textColor="@color/application_color"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/spike_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spike_time_hour"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_spike_header_time_bg"
            android:gravity="center"
            android:textColor="@color/black_font"
            android:textSize="12sp" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />

        <TextView
            android:id="@+id/spike_time_minute"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_spike_header_time_bg"
            android:gravity="center"
            android:textColor="@color/black_font"
            android:textSize="12sp" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />

        <TextView
            android:id="@+id/spike_time_seconds"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_spike_header_time_bg"
            android:gravity="center"
            android:textColor="@color/black_font"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/spike_header_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/color_orange_red"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/arrow_rt" />

</LinearLayout>