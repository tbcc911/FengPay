<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.fzs.comn.widget.floor.banner.view.BannerBGView
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150" />

    <com.fzs.comn.widget.floor.banner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pageChangeDuration="1500"
        app:banner_pointAutoPlayInterval="3500"
        app:banner_pointContainerBackground="@color/transparent"
        app:banner_pointTopBottomMargin="@dimen/dp_8"
        app:banner_tipTextSize="@dimen/sp_12"
        app:banner_transitionEffect="defaultEffect"
        app:banner_viewAspectRatio="2.27" />

</FrameLayout>
