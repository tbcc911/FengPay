<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/comn_bg_white_fillet">

    <com.fzs.comn.widget.imageview.ExpandImageView
        android:id="@+id/icon_list_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="@dimen/comn_bg_white_fillet" />

    <com.hzh.frame.widget.xviewpager.DecoratorViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/comn_bg_white_fillet"
        android:overScrollMode="never"
        android:visibility="visible" />
</FrameLayout>