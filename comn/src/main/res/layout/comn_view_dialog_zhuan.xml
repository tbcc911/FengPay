<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comn_bg_white_fillet"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="划转"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="1.USDT提币过来60% USDT到账\n2.30%进入EVEpay\n3.10%进入基金"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_13" 
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/comn_bg_save"
                            android:elevation="@dimen/dp_8"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="USDT"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/comn_dialog_hua" 
                            android:visibility="gone"/>


                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/comn_bg_save"
                            android:elevation="@dimen/dp_8"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="EVEpay"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_15" 
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ecc"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@drawable/comn_bg_save"
                            android:elevation="@dimen/dp_8"
                            android:gravity="center"
                            android:hint="兑换数量"
                            android:inputType="number"
                            android:maxLines="1"
                            android:minWidth="@dimen/dp_600"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_333"
                            android:textColorHint="@color/base_999999"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/comn_dialog_hua"
                            android:visibility="gone"/>


                        <EditText
                            android:id="@+id/usdt"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@drawable/comn_bg_save"
                            android:elevation="@dimen/dp_8"
                            android:gravity="center"
                            android:hint="兑换数量"
                            android:inputType="number"
                            android:maxLines="1"
                            android:minWidth="@dimen/dp_600"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/text_333"
                            android:textColorHint="@color/base_999999"
                            android:textSize="@dimen/sp_15" 
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>


            <TextView
                android:id="@+id/submit"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/comn_button_circle_select"
                android:elevation="@dimen/dp_3"
                android:gravity="center"
                android:text="确认划转"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="@dimen/dp_10"/>
        </LinearLayout>
        
    </FrameLayout>
    
    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/base_close_white" />
    
</LinearLayout>

